<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Login'}) %>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h4 class="mb-4"> Selamat Datang, <%= profileName %>!</h4>
        <div class="card">
            <div class="card header bg-primary text-white">Data Penyakit & Gejala</div>
            <div class="card-body p-0">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="'table-light">
                        <tr>
                            <th>Nama Penyakit</th>
                            <th>Level</th>
                            <th>Gejala</th>
                            <th>Dibuat Oleh</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% diseases.forEach(disease => { %>
                            <tr>
                                <td><%= disease.name %></td>
                                <td><%= formatLevel(disease.level) %></td>
                                <td>
                                    <% disease.Symptoms.forEach((sym, idx) => { %>
                                        <%= sym.name %><%= idx < disease.Symptoms.length - 1 ? ', ' : '' %>
                                    <% }) %>
                                </td>
                                <td><%= disease.User && disease.User.Profile ? disease.User.Profile.name : '-' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
</body>
</html>